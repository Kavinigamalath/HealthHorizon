<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:outlineProvider="none"
    tools:context=".MainActivity2">

  <TextView
      android:id="@+id/textView3"
      android:layout_width="383dp"
      android:layout_height="106dp"
      android:fontFamily="serif"
      android:text="@string/quot_achieve_your_best_self_with_fittrack_quot"
      android:textAlignment="center"
      android:textColor="#3379AD"
      android:textColorLink="#03346E"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.571"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.453" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="333dp"
      android:layout_height="153dp"
      android:gravity="center_horizontal|fill_horizontal"
      android:text="Track your workouts, monitor your progress, and set personalized goals to stay motivated and fit. Letâ€™s embark on this fitness journey together!"
      android:textAlignment="textStart"
      android:textColorLink="#0000"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.673" />

  <Button
      android:id="@+id/button1"
      android:layout_width="187dp"
      android:layout_height="57dp"
      android:backgroundTint="#03346E"
      android:text="Next"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.829" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Skip"
      android:textColor="#3379AD"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.886" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="280dp"
      android:layout_height="252dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.087"
      app:srcCompat="@drawable/img" />

</androidx.constraintlayout.widget.ConstraintLayout>